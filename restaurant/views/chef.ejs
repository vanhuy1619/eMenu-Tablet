<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gogi | Nhân Viên Bếp</title>
    <link rel="shortcut icon" href="/images/mkav-tea/logo_transparent.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
        integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Baloo+2:wght@600;700&Barlow:wght@400;500;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/loading.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<style>
    html {
        font-size: 100%;
    }

    .profile-main__left--item {
        font-size: 16px;
    }

    .profile-main__left--item i {
        font-size: 14px;
    }
</style>

<body>
    <div class="wrapper">
        <header class="order-header">
            <div class="container">
                <a href="/" class="order-header-logo">
                    <img src="/images/mkav-tea/logo_transparent.png" alt="">
                </a>
                <li class="btn-group user-group">
                    <img src="<%= chef.image %>" alt="">
                </li>
            </div>
        </header>
        <section class="profile-main">
            <div class="container">
                <div class="profile-main__left">
                    <div class="profile-main__left--item active">
                        <i class="fas fa-shopping-cart"></i>
                        Quản lí đơn đặt món
                    </div>
                    <div class="profile-main__left--item" id="updatêmnu">
                        <i class="fas fa-list-check"></i>
                        Quản lý tình trạng menu
                    </div>
                    <div class="profile-main__left--item" id="logout">
                        <i class="fas fa-sign-out-alt"></i>
                        Đăng xuất
                    </div>
                </div>
                <div class="profile-main__right">
                    <div class="tab" id="order-manager">
                        <div class="order">
                            <% if(locals.orders) { %>
                                <% orders.forEach(function(order) { %>
                                    <div class="order-title">
                                        <div class=" d-flex justify-content-between pt-3 pl-3 pr-3">
                                            <span class="h4 text-info">Bàn <span class="h4 text-success">
                                                    <%= order.idtable %>
                                                </span>
                                        </div>
                                        <div class=" d-flex justify-content-between pb-3 pl-3 pr-3">
                                        </div>
                                    </div>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="col" class="text-center align-middle">#</th>
                                                <th scope="col" class="text-center align-middle">Tên món ăn</th>
                                                <th scope="col" class="text-center align-middle">Số lượng</th>
                                                <th scope="col" class="text-center align-middle">Ghi chú</th>
                                                <th scope="col" class="text-center align-middle">Thời gian đặt</th>
                                                <th scope="col" class="text-center align-middle">Thao tác</th>
                                                <th scope="col" class="text-center align-middle">Hủy</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% order.listOrder.forEach(function(product, index) { %>
                                                <tr>
                                                    <th scope="row" class="text-center align-middle">
                                                        <%= (index + 1) %>
                                                    </th>
                                                    <td class="align-middle">
                                                        <%= product.productInfo.name %>
                                                    </td>
                                                    <td class="align-middle">
                                                        <% if(product.status >= 2) { %>
                                                            <p type="number" class="amountEdit" id="amountEdit" value="<%= product.amount %>" price="<%= product.price %>"><%= product.amount %></p>
                                                        <% } else {%>
                                                            <input type="number" class="amountEdit" min="1" max="<%= product.amount %>" id="amountEdit" value="<%= product.amount %>" price="<%= product.price %>">
                                                        <% } %>
                                                    </input></td>
                                                    <td class="align-middle"><%= product.note %></td>

                                                    <td class="text-center align-middle"><%= product.timeOrder %></td>
                                                    <td class="text-center align-middle">
                                                        <% if(product.status == 1) { %>
                                                            <button class="btn btn-info mb-2" action="dangchebien" id="cooking" status="2" data-idtable="<%= product.idtable%>" data-iditem="<%= product.productInfo._id %>" data-product_id="<%= product.product_id %>"  data-_id="<%= order._id %>">Thực hiện</button>
                                                        <% } %>
                                                        <% if(product.status == 2 || product.status == 1 ) { %>
                                                            <button class="btn btn-success" action="hoantat" id="cooking" status="3" data-idtable="<%= product.idtable%>" data-iditem="<%= product.productInfo._id %>" data-product_id="<%= product.product_id %>"  data-_id="<%= order._id %>">Hoàn tất</button>
                                                        <% } %>
                                                    </td>
                                                    <% if(product.status == 1) { %>
                                                        <td class="text-center align-middle">
                                                            <button class="btn btn-danger" action="huy" id="cooking" status="0" data-idtable="<%= product.idtable%>" data-iditem="<%= product.productInfo._id %>" data-product_id="<%= product.product_id %>" data-_id="<%= order._id %>">Hủy</button>
                                                        </td>
                                                    <% } %>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <% })} %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div id="loading">
        <img src="/images/loading.svg" />
    </div>
</body>
<script src="/scripts/chef.js"></script>
<script src="/scripts/time-convert.js"></script>
<script src="/scripts/loading.js"></script>

</html>