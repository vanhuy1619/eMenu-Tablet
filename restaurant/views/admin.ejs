<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gogi | Admin</title>
    <link rel="shortcut icon" href="/images/mkav-tea/logo_transparent.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Baloo+2:wght@600;700&Barlow:wght@400;500;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/styles/admin.css">
    <link rel="stylesheet" href="/styles/bill.css">
    <link rel="stylesheet" href="/styles/loading.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- CALENDAR -->
    <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
    <link rel="stylesheet" href="/calendar/css/mobiscroll.jquery.min.css">
    <script src="/calendar/js/mobiscroll.jquery.min.js"></script>
</head>
<style>
    .profile-main .container {
        max-width: 1200px;
    }

    button {
        display: inline-block;
        margin: 5px 5px 0 0;
        padding: 10px 30px;
        outline: 0;
        border: 0;
        cursor: pointer;
        background: #5185a8;
        color: #fff;
        text-decoration: none;
        font-family: arial, verdana, sans-serif;
        font-size: 14px;
        font-weight: 100;
    }

    input {
        width: 100%;
        margin: 0 0 5px 0;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 0;
        font-family: arial, verdana, sans-serif;
        font-size: 14px;
        box-sizing: border-box;
        -webkit-appearance: none;
    }

    .mbsc-page {
        padding: 1em;
    }

    .mbsc-ios.mbsc-page {
        width: 100%;
        background: white !important;
        color: #000;
    }

    .mbsc-page {
        padding: 0 !important;
    }

    .mbsc-ios.mbsc-textfield-wrapper-box,
    .mbsc-ios.mbsc-textfield-wrapper-outline {
        margin: 0 !important;
    }
</style>

<body>
    <div class="wrapper">
        <header class="order-header">
            <div class="container">
                <div class="order-header-logo">
                    <a href="/"><img src="/images/mkav-tea/logo_transparent.png" alt=""></a>
                </div>
                <li class="btn-group user-group">
                    <a href="/admin/?tab=employee-manager"><img src="<%= admin.image %>" alt=""></a>
                </li>
            </div>
        </header>
        <section class="profile-main">
            <div class="" style="padding: 2rem 14%;">
                <div class="row">
                    <div class="col-md-4">
                        <div class="profile-main__left">
                            <!-- <div class="profile-main__left--item employee-manager">
                                <i class="fas fa-user-alt"></i>
                                Quản lí nhân viên
                            </div> -->
                            <!-- <div class="profile-main__left--item request-manager">
                                <i class="fas fa-reply-all"></i>
                                Quản lí các yêu cầu
                            </div> -->
                            <div class="profile-main__left--item" id="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                Đăng xuất
                            </div>
                            <div class="profile-main__left--item">
                                <div mbsc-page class="demo-usage-on-input-or-inline">
                                    <div style="height:100%">
                                        <label>
                                            Quản lý hóa đơn
                                            <input id="demo-one-input" mbsc-input data-input-style="outline"
                                                data-label-style="stacked" placeholder="Please select..."
                                                style="width: 100%;" />
                                        </label>
                                        <!-- <div id="demo-init-inline"></div> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div>
                            <div class="profile-main__right">
                                <p style="padding: 20px 30px;text-align: center; font-weight: 700;font-size: 18px;color: #AC773C;">Quản lý hóa đơn bán hàng</p>
                                <%- include('bill') -%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <div id="loading">
        <img src="/images/loading.svg" />
    </div>
</body>
<script src="/scripts/admin.js"></script>
<script src="/scripts/loading.js"></script>
<script>
    $("#logout").click(function () {
        window.location.href = "/logout"
    })


    mobiscroll.setOptions({
        locale: mobiscroll.localeEn,  // Specify language like: locale: mobiscroll.localePl or omit setting to use default
        theme: 'ios',                 // Specify theme like: theme: 'ios' or omit setting to use default
        themeVariant: 'light'     // More info about themeVariant: https://docs.mobiscroll.com/5-22-3/calendar#opt-themeVariant
    });

    $(function () {
        // Mobiscroll Calendar initialization
        $('#demo-one-input').mobiscroll().datepicker({
            controls: ['calendar'],   // More info about controls: https://docs.mobiscroll.com/5-22-3/calendar#opt-controls
            display: 'anchored'       // Specify display mode like: display: 'bottom' or omit setting to use default
        });

        // Mobiscroll Calendar initialization
        $('#demo-init-inline').mobiscroll().datepicker({
            controls: ['calendar'],   // More info about controls: https://docs.mobiscroll.com/5-22-3/calendar#opt-controls
            display: 'inline'         // Specify display mode like: display: 'bottom' or omit setting to use default
        });
    });

</script>

</html>