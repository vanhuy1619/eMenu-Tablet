<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gogi | Bàn ăn</title>
    <link rel="shortcut icon" href="/images/mkav-tea/logo_transparent.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
        integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&Montserrat:wght@400;500;600;700&Barlow:wght@400;500;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://unpkg.com/micromodal/dist/micromodal.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <!-- <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script> -->
  <!-- <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script> -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<style>
    #edit-modal {
        font-family: 'Poppins', sans-serif;
    }

    .form {
        padding: 24px 32px;
        background: #fff;
        box-shadow: 0 0 4px 6px rgba(0, 0, 0, 0.05);
        width: 450px;
        border-radius: 16px;
    }

    .form .form-title {
        padding-bottom: 10px;
        border-bottom: 1px solid #e6e6e6;
        font-size: 2.5rem;
        font-weight: 600;
    }

    .form .form-content {
        display: flex;
        flex-direction: column;
        margin-top: 20px;
        margin-bottom: 10px;
    }

    .form .form-content .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 10px;
        position: relative;
    }

    .form .form-content .form-group label {
        margin-bottom: 2px;
        font-size: 16px;
        font-family: "Poppins", sans-serif;
        font-weight: 400;
    }

    .form .form-content .form-group input[type=text] {
        padding: 8px 14px;
        font-size: 16px;
        border: 1px solid #e6e6e6;
        outline: none;
        border-radius: 5px;
        font-weight: 400;
        font-family: "Poppins", sans-serif;
    }

    .button-group {
        display: inline-flex;
        justify-content: right;
        width: 100%;
        margin-top: 10px;
    }

    .form .form-content button {
        padding: 10px 14px;
        width: 25%;
        margin-left: 14px;
        color: white;
        background-color: #333;
        border: none;
        border-radius: 3px;
        font-size: 15px;
        cursor: pointer;
    }

    #error-text {
        color: #721c24;
        padding: 8px 10px;
        text-align: center;
        border-radius: 5px;
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        font-size: 16px;
        font-weight: 400;
        visibility: hidden;
    }

    #loading {
        position: fixed;
        display: none;
        top: calc(50% - 60px);
        left: calc(50% - 60px);
        z-index: 9999;
        width: 120px;
        height: 120px;
        overflow: hidden;
        display: none;
    }

    #loading img {
        width: 120px;
        height: 120px;
        object-fit: cover;
    }

    .item-table{
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
        border-radius: 6px;
        padding: 25px;
    }
</style>

<body>
    <div class="wrapper">
        <header class="order-header">
            <div class="container">
                <div class="order-header-logo">
                    <a href="/"><img src="/images/mkav-tea/logo_transparent.png" alt=""></a>
                </div>
                <div class="order-header-search">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search">
                </div>
                <% if (!locals.user) { %>
                    <li class="btn-group">
                        <button class="btn" id="login-btn">Đăng Nhập</button>
                        <button class="btn btn-transparent" id="register-btn">Đăng Ký</button>
                    </li>
                    <% } else if (user.position==0) {%>
                        <li class="btn-group user-group">
                            <a href="/profile/?tab=profile"><img src="<%= user.image %>" alt=""></a>
                            <div class="dropdown">
                                <i class="fas fa-sort-down"></i>
                                <ul class="dropdown-menu">
                                    <li>
                                        <i class="fas fa-user-alt"></i>
                                        <a href="/profile/?tab=profile">Thông tin tài khoản</a>
                                    </li>
                                    <li>
                                        <i class="fas fa-history"></i>
                                        <a href="/profile/?tab=history">Lịch sử mua hàng</a>
                                    </li>
                                    <li>
                                        <i class="fas fa-shopping-cart"></i>
                                        <a href="/profile/?tab=order">Đơn hàng của tôi</a>
                                    </li>
                                    <li>
                                        <i class="fas fa-sign-out-alt"></i>
                                        <a href="/user/logout">Đăng xuất</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <% } else if (user.position==6) {%>
                            <li class="btn-group user-group">
                                <a href="/admin/?tab=employee-manager"><img src="<%= user.image %>" alt=""></a>
                                <div class="dropdown">
                                    <i class="fas fa-sort-down"></i>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <i class="fas fa-user-alt"></i>
                                            <a href="/admin/?tab=employee-manager">Quản lí nhân viên</a>
                                        </li>
                                        <li>
                                            <i class="fas fa-reply-all"></i>
                                            <a href="/admin/?tab=request-manager">Quản lí yêu cầu</a>
                                        </li>
                                        <li>
                                            <i class="fas fa-sign-out-alt"></i>
                                            <a href="/user/logout">Đăng xuất</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <% } else if (user.position==1) {%>
                                <li class="btn-group user-group">
                                    <a href="/customer-care/?tab=product-manager"><img src="<%= user.image %>"
                                            alt=""></a>
                                    <div class="dropdown">
                                        <i class="fas fa-sort-down"></i>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <i class="fas fa-mug-hot"></i>
                                                <a href="/customer-care/?tab=product-manager">Quản lí sản
                                                    phẩm</a>
                                            </li>
                                            <li>
                                                <i class="fas fa-sign-out-alt"></i>
                                                <a href="/user/logout">Đăng xuất</a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>

                                <% } else if (user.position==3) {%>
                                    <li class="btn-group user-group">
                                        <a href="/salesman/?tab=order-manager"><img src="<%= user.image %>" alt=""></a>
                                        <div class="dropdown">
                                            <i class="fas fa-sort-down"></i>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <i class="fas fa-shopping-cart"></i>
                                                    <a href="/salesman/?tab=order-manager">Quản lí đặt hàng</a>
                                                </li>
                                                <li>
                                                    <i class="fas fa-sign-out-alt"></i>
                                                    <a href="/user/logout">Đăng xuất</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                    <% } else if (user.position==2) {%>
                                        <li class="btn-group user-group">
                                            <a href="/shipper/?tab=shipper-manager"><img src="<%= user.image %>"
                                                    alt=""></a>
                                            <div class="dropdown">
                                                <i class="fas fa-sort-down"></i>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <i class="fas fa-shopping-cart"></i>
                                                        <a href="/shipper/?tab=shipper-manager">Đơn đặt hàng</a>
                                                    </li>
                                                    <li>
                                                        <i class="fas fa-sign-out-alt"></i>
                                                        <a href="/user/logout">Đăng xuất</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </li>
                                        <% } %>
            </div>
        </header>
        <section class="order-main">
            <div class="div-table" style="padding:6rem 15rem">
                <div class="row">
                    <% tables.forEach(function(table) {%>
                        <div class="col-md-3">
                            <div class="item-table" data-id="<%= table.id %>" status="<%= table.status %>">
                                <% if (table.status === 'Trống') { %>
                                    <img src="/images/tablenull.png" style="width: 100%;object-fit: contain;" alt="Bàn trống">
                                <% } %>
                                <% if (table.status === 'Đang dùng') { %>
                                    <img src="/images/tableuse.png" style="width: 100%;object-fit: contain;" alt="Bàn trống">
                                <% } %>
                                <p style="font-size: 18px; font-weight: bold; text-align: center;"><%= table.name %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>

        <i class="fas fa-arrow-up" id="scroll-top"></i>
    </div>
    <div id="loading">
        <img src="/images/loading.svg" />
    </div>
</body>

<script src="/scripts/account-btn.js"></script>
<script src="/scripts/loading.js"></script>
<script src="/scripts/handle-dropdown.js"></script>
<script src="/scripts/payment.js"></script>
<script src="/scripts/order.js"></script>
<script src="/scripts/table.js"></script>


</html>